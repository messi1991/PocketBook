<view>
  <van-tabs active="{{ active }}" bind:change="onChange">
    <van-tab title="支出">
      <van-row>
        <van-col span="6" wx:for="{{ list }}"
        wx:key="index" >
          <view class="list" 
            bindtap="onClick"
            data-index="{{ index }}">
            <van-icon name="{{ item.icon }}" color="red" size="24px" />
            <view>{{ item.title }}</view>
          </view>
        </van-col>
      </van-row>
    </van-tab>
    <van-tab title="收入">
      内容 2
    </van-tab>
  </van-tabs>
  
  <van-popup
    show="{{ show }}" 
    round
    position="bottom"
    close-icon="close"
    bind:close="onClose">
    <view class="popup-box">
      <view class="popup-box-title"> 
        添加{{ list[listIndex].title }}
      </view>
      <van-cell-group inset >
        <van-cell 
          title="日期" 
          value="{{ date }}" 
          bind:click="onCalendarShow" />
          
        <van-field
          center 
          model:value="{{ amount }}"
          label="金额"
          type="digit"
          placeholder="请输入金额"
          input-align="right"
          border="{{ false }}"
        />
        <van-field
          center 
          model:value="{{ remark }}"
          label="备注"
          placeholder="请输入备注"
          input-align="right"
          border="{{ false }}"
        />
      </van-cell-group>
      <van-button 
        type="primary"
        bind:click="submitPayData">
        提交
      </van-button>
    </view>
  </van-popup>
  <van-calendar 
    min-date="{{ minDate }}"
    show="{{ isShowCalendar }}" 
    bind:close="onCalendarClose" 
    bind:confirm="onCalendarConfirm" />
</view>